<%= form_with model: article, class: "space-y-6" do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="mt-1 text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.text_area :body, rows: 10, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="mt-1 text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.select :status, ['public', 'private', 'archived'], { selected: 'public' }, 
                    { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
  </div>

  <div class="pt-5">
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
<% end %>